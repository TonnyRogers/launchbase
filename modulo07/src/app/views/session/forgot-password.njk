{% extends "layout.njk" %}

{% import "parts/card.njk" as cards %}
 
{% block head %}
    <title>Login</title>
{% endblock head %}

{% block content %}

    {% call cards.render('Esqueceu a Senha?','password container')%}
            <form method="POST" action="/users/forgot-password" >

            <div class="fields">
                <div class="item">
                    <div>E-mail</div>
                    <div class="input">
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="Digite seu e-mail"
                            value="{{ user.email }}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar a senha</button>
        </form>
    {% endcall %} 
{% endblock content %}