<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input 
            type="email" 
            name="email" 
            placeholder="Digite seu e-mail"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password" 
            placeholder="Digite nova senha"
        >
    </div>
</div>

<div class="item">
    <div>Confirme Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat" 
            placeholder="Confirme nova senha"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}" />