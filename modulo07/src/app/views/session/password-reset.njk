{% extends "layout.njk" %}

{% block head %}
    <title>Recuperar Senha</title>
{% endblock head %}

{% block content %}
    <section class="password container form">
        <form method="POST" action="/users/password-reset" >

            <div class="header">
                <h3>Redefinir Senha</h3>
            </div>

            <div class="fields">
                {% include "session/reset-fields.njk" %}
            </div>

            <button class="button" type="submit">Redefinir</button>
        </form>
    </section>
    
{% endblock content %}