{% extends "layout.njk" %}

{% block head %}
    <title>Editar Produto</title>
{% endblock head %}

{% block content %}
    <section class="container form">
        <form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">

            <div class="header">
                <h3>Editar Produto</h3>
            </div>

            <div class="fields">
                {% include 'products/fields.njk' %}

                <input type="hidden" name="id" value="{{ product.id }}">
            </div>

            <button class="button edit" type="submit" onclick="Validate.allFields(event)">Atualizar</button>

        </form>

        <form id="form-delete" action="/products?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{ product.id }}">
            <button class="button delete" type="submit">Deletar</button>
        </form>
    </section>
    
{% endblock content %}

{% include "scripts.njk" %}