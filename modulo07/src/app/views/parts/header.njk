<header>
    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>Tonystore</h1>
                <h2>Compra & Venda</h2>
            </div>
        </a>

        <form class="search" action="/products/search" method="GET">
            <input 
                type="text" 
                name="filter" 
                placeholder="Buscar por produtos"
                {% if search.term %}
                    value="{{search.term}}"
                {% endif %}
            >
        </form>

        <nav class="primary">
            <ul>
                <li>
                    <a href="/ads/create">
                        <i class="material-icons" >add</i>
                        Novo anuncio
                    </a>
                </li>
                <li class="accounts">
                    <a href="/accounts">
                        <i class="material-icons" >account_circle</i>
                        Minha conta
                    </a>
                    {% if session.userId %}
                        <ul class="submenu">
                            <li>
                                <a href="/users">Minha Conta</a>
                            </li>
                            <li>
                                <a href="/users/ads">Meus An√∫ncios</a>
                            </li>
                            <li>
                                <a href="/selling">Minhas Vendas</a>
                            </li>
                            <li>
                                <form action="/users/logout" method="post">
                                    <button >Sair</button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}
                </li>
            </ul>
        </nav>
    </div>
</header>