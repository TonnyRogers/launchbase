{% extends "layout.njk" %}

{% block head %}
    <title>Login</title>
{% endblock head %}

{% block content %}
    <section class="password container form">
        <form method="POST" action="/users/forgot-password" >

            <div class="header">
                <h3>Esqueceu a Senha?</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <div>E-mail</div>
                    <div class="input">
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="Digite seu e-mail"
                            value="{{ user.email }}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar a senha</button>
        </form>
    </section>
    
{% endblock content %}