{% extends "layout.njk" %}

{% block head %}
    <title>Login</title>
{% endblock head %}

{% block content %}
    <section class="login container form">
        <form method="POST" action="/users/login" >

            <div class="header">
                <h3>Logar</h3>
            </div>

            <div class="fields">
                {% include 'session/fields.njk' %}
            </div>

            <button class="button" type="submit">Entrar</button>

            <div class="footer">
                <ul>
                    <li>
                        <a href="/users/register">Cadastrar-se</a>
                    </li>
                    <li>
                        <a href="/users/forgot-password">Esqueceu a senha?</a>
                    </li>
                </ul>
            </div>
        </form>
    </section>
    
{% endblock content %}